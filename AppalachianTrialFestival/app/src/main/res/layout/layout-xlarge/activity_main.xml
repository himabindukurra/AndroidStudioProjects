<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.udayton.binduk.sailingadventures.MainActivity">

    <ImageView
        android:id="@+id/sailImageView"
        android:layout_width="@dimen/xlrgSailWidth"
        android:layout_height="@dimen/xlrgSailHeight"
        android:layout_weight="1"
        android:contentDescription="@string/txtSailboat"
        app:srcCompat="@drawable/sail" />

    <TableLayout
        android:id="@+id/tblLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TableRow
            android:id="@+id/tblRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View android:layout_height="@dimen/xlrgViewHeight"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/titleBackground"
                android:fontFamily="serif"
                android:gravity="fill_horizontal"
                android:padding="@dimen/xlrgTitlePadding"
                android:text="@string/txtTitle"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/xlrgTitleSize" />
        </TableRow>

        <TableRow
            android:id="@+id/tblRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View android:layout_height="@dimen/xlrgViewHeight"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="@dimen/xlrgDescPadding"
                android:text="@string/txtDescription"
                android:textColor="@android:color/black"
                android:textSize="@dimen/xlrgDescTitleSize" />
        </TableRow>

        <TableRow
            android:id="@+id/tblRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View android:layout_height="@dimen/xlrgViewHeight"/>

            <Button
                android:id="@+id/btnDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/xlrgBtnPadding"
                android:text="@string/btnDate"
                android:textSize="@dimen/xlrgBtnTextSize" />
        </TableRow>

        <TableRow
            android:id="@+id/tblRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <View android:layout_height="@dimen/xlrgViewHeight"/>

            <TextView
                android:id="@+id/txtReservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:padding="@dimen/xlrgResPadding"
                android:textSize="@dimen/xlrgResTextSize" />
        </TableRow>
    </TableLayout>
</LinearLayout>
